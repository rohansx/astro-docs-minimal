---
/**
 * Pagefind Search Component
 * Static search for documentation pages
 */
---

<div class="docs-search-container">
  <div id="search"></div>
  <noscript>
    <div class="search-fallback">Search requires JavaScript to be enabled.</div>
  </noscript>
</div>

<link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
<script is:inline src="/pagefind/pagefind-ui.js"></script>

<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    const searchElement = document.getElementById('search');

    if (typeof PagefindUI !== 'undefined') {
      new PagefindUI({
        element: '#search',
        showSubResults: true,
        showImages: false,
        excerptLength: 15,
        resetStyles: false,
      });
    } else {
      // Show dev mode message if Pagefind isn't loaded
      if (searchElement) {
        searchElement.innerHTML = `
          <div class="search-dev-notice">
            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Search is available after building (run <code>npm run build</code>)</span>
          </div>
        `;
      }
    }
  });
</script>

<style>
  .docs-search-container {
    width: 100%;
    padding: 1rem;
    margin-bottom: 2rem;
    background: white;
    border-radius: 0.5rem;
    border: 1px solid #e2e8f0;
  }

  /* Custom styling for Pagefind UI */
  :global(.pagefind-ui__search-input) {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 2px solid #e2e8f0;
    border-radius: 0.5rem;
    background: white;
    color: #0f172a;
    transition: all 0.2s;
  }

  :global(.pagefind-ui__search-input:focus) {
    outline: none;
    border-color: #fbbf24;
    box-shadow: 0 0 0 3px rgba(251, 191, 36, 0.1);
  }

  :global(.pagefind-ui__search-input::placeholder) {
    color: #94a3b8;
  }

  :global(.pagefind-ui__results) {
    margin-top: 1rem;
    padding: 0 1rem;
  }

  :global(.pagefind-ui__result) {
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    padding: 1rem 1.5rem;
    margin-bottom: 0.75rem;
    background: white;
    transition: all 0.2s;
  }

  :global(.pagefind-ui__result:hover) {
    border-color: #fbbf24;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }

  :global(.pagefind-ui__result-title) {
    font-size: 1.125rem;
    font-weight: 600;
    color: #78350f;
    margin-bottom: 0.5rem;
  }

  :global(.pagefind-ui__result-excerpt) {
    color: #64748b;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  :global(.pagefind-ui__result-link) {
    text-decoration: none;
  }

  :global(.pagefind-ui__message) {
    color: #64748b;
    padding: 1rem;
    text-align: center;
  }

  :global(mark) {
    background: #fef3c7;
    color: #78350f;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-weight: 600;
  }

  /* Dev mode notice styling */
  :global(.search-dev-notice) {
    background: #eff6ff;
    border: 2px solid #bfdbfe;
    border-radius: 0.5rem;
    padding: 1rem;
    color: #1e40af;
    font-size: 0.875rem;
    text-align: center;
  }

  :global(.search-dev-notice code) {
    background: #dbeafe;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-family: monospace;
    font-size: 0.875rem;
  }

  :global(.search-fallback) {
    background: #fef3c7;
    border: 2px solid #fde047;
    border-radius: 0.5rem;
    padding: 1rem;
    color: #854d0e;
    font-size: 0.875rem;
    text-align: center;
  }
</style>
